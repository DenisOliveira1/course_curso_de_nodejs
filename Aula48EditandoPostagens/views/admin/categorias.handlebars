<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Adicionar categoria</button></a>

{{#each categorias}}
<div class="card mt-4 mb-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>Slug: {{slug}}</small>
        <br>
        <small>Data de criação: {{date}}</small>
        <br>
        <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar</button></a>
        
        <form  action="/admin/postagens/delete" method="POST">
            <input type="hidden" name="id" id="" value ="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
    </div>
</div>
{{else}}
    <div class="mt-4">Nenhuma categoria cadastrada</div>
{{/each}}